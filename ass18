import 'dart:math';
import 'package:flutter/material.dart';

void main() {
  runApp(LuckyNumberApp());
}

class LuckyNumberApp extends StatefulWidget {
  @override
  _LuckyNumberAppState createState() => _LuckyNumberAppState();
}

class _LuckyNumberAppState extends State<LuckyNumberApp> {
  int? luckyNumber; // Holds the current lucky number

  // Method to generate random lucky number
  int getRandomLuckyNumber() {
    return Random().nextInt(350) + 1; // Range: 1 to 350
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Lucky Number Generator',
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          title: const Text('Lucky Number Generator'),
          centerTitle: true,
        ),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Text(
                luckyNumber != null
                    ? 'ðŸŽ¯ Your Lucky Number is: $luckyNumber ðŸŽ‰'
                    : 'Click below to get your Lucky Number!',
                textAlign: TextAlign.center,
                style: const TextStyle(
                  fontSize: 24,
                  fontWeight: FontWeight.bold,
                  color: Colors.deepPurple,
                ),
              ),
              const SizedBox(height: 30),
              ElevatedButton(
                onPressed: () {
                  setState(() {
                    luckyNumber = getRandomLuckyNumber();
                  });
                },
                style: ElevatedButton.styleFrom(
                  backgroundColor: Colors.deepPurple,
                  padding: const EdgeInsets.symmetric(
                      vertical: 15.0, horizontal: 30.0),
                ),
                child: const Text(
                  'Get Lucky Number',
                  style: TextStyle(fontSize: 18, color: Colors.white),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
