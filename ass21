import 'package:flutter/material.dart';
import 'dart:math';

void main() {
  runApp(TextColorChangerApp());
}

class TextColorChangerApp extends StatefulWidget {
  @override
  _TextColorChangerAppState createState() => _TextColorChangerAppState();
}

class _TextColorChangerAppState extends State<TextColorChangerApp> {
  Color currentColor = Colors.black;

  // List of colors to cycle through
  final List<Color> colors = [
    Colors.black,
    Colors.red,
    Colors.blue,
    Colors.green,
    Colors.orange,
    Colors.purple,
  ];

  final Random random = Random();

  void changeTextColor() {
    setState(() {
      // Pick a random color different from currentColor
      Color newColor;
      do {
        newColor = colors[random.nextInt(colors.length)];
      } while (newColor == currentColor);
      currentColor = newColor;
    });
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Text Color Changer',
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(title: const Text('Change Text Color')),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Text(
                'Hello Flutter!',
                style: TextStyle(fontSize: 28, color: currentColor),
              ),
              const SizedBox(height: 20),
              Text(
                'Press the button to change my color.',
                style: TextStyle(fontSize: 22, color: currentColor),
              ),
              const SizedBox(height: 20),
              Text(
                'All text widgets change color!',
                style: TextStyle(fontSize: 22, color: currentColor),
              ),
              const SizedBox(height: 40),
              ElevatedButton(
                onPressed: changeTextColor,
                child: const Text('Change Text Color'),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
