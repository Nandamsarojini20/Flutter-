import 'package:flutter/material.dart';

void main() {
  runApp(ShowDataApp());
}

class ShowDataApp extends StatefulWidget {
  @override
  _ShowDataAppState createState() => _ShowDataAppState();
}

class _ShowDataAppState extends State<ShowDataApp> {
  bool showImage = true; // Flag for toggling content

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(title: const Text('Show Image or Info')),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              // Content area
              if (showImage)
                Image.asset(
                  'assets/images/profile.png',
                  width: 180,
                  height: 180,
                  fit: BoxFit.cover,
                )
              else
                Column(
                  children: const [
                    Text(
                      'Name: John Doe',
                      style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                    ),
                    SizedBox(height: 8),
                    Text(
                      'Phone: +1 9876543210',
                      style: TextStyle(fontSize: 18),
                    ),
                    SizedBox(height: 8),
                    Text(
                      'Email: johndoe@example.com',
                      style: TextStyle(fontSize: 18),
                    ),
                  ],
                ),
              const SizedBox(height: 40),

              // Buttons Row
              Row(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  ElevatedButton(
                    onPressed: () {
                      setState(() {
                        showImage = true;
                      });
                    },
                    child: const Text('A - Show Image'),
                  ),
                  const SizedBox(width: 20),
                  ElevatedButton(
                    onPressed: () {
                      setState(() {
                        showImage = false;
                      });
                    },
                    child: const Text('B - Show Info'),
                  ),
                ],
              ),
            ],
          ),
        ),
      ),
    );
  }
}
